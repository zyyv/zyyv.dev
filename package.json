{
  "name": "zyyv.dev",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "description": "Chris' blog build with Nuxt3.",
  "author": "Chris <https://github.com/zyyv>",
  "homepage": "https://github.com/zyyv/zyyv.dev#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zyyv/zyyv.dev.git"
  },
  "bugs": {
    "url": "https://github.com/zyyv/zyyv.dev/issues"
  },
  "keywords": [
    "blog",
    "vue3",
    "nuxt3",
    "unocss"
  ],
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "lint": "eslint .",
    "postinstall": "nuxt prepare && pnpm photos",
    "typecheck": "tsc --noEmit",
    "taze": "taze major -wIr",
    "photos": "esno scripts/photo.ts",
    "compress": "esno scripts/squoosh.ts"
  },
  "dependencies": {
    "@lhlyu/vue-virtual-waterfall": "^1.0.8",
    "blurhash": "^2.0.5",
    "dayjs": "^1.11.19"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@iconify-json/catppuccin": "^1.2.17",
    "@iconify-json/fluent-emoji": "^1.2.7",
    "@iconify-json/hugeicons": "^1.2.17",
    "@iconify-json/logos": "^1.2.10",
    "@iconify/utils": "^3.0.2",
    "@nuxt/content": "3.6.1",
    "@nuxt/image": "1.10.0",
    "@unocss/nuxt": "^66.5.5",
    "@vueuse/nuxt": "^14.0.0",
    "eslint": "^9.39.1",
    "esno": "^4.8.0",
    "execa": "^9.6.0",
    "exifr": "^7.1.3",
    "lint-staged": "^16.2.6",
    "nuxt": "^4.2.1",
    "octokit": "^5.0.5",
    "sharp": "^0.34.5",
    "simple-git-hooks": "^2.13.1",
    "squoosh-next": "^0.1.3",
    "taze": "^19.9.0",
    "typescript": "5.7.2",
    "unocss": "^66.5.5",
    "unocss-preset-useful": "^1.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
